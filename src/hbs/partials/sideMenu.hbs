<ul class="sideMenu">
    {{#each items}}
        
        {{#eq type "header"}}
            <li class="sideMenu-headerItem">
                {{../text}}
            </li>
        {{/eq}}

        {{#eq type "link"}}
            <li class="sideMenu-linkItem {{#if ../active}}sideMenu-linkItem--active{{/if}}">
                <a class="sideMenu-link" href="#">
                    <span class="sideMenu-iconWrapper">
                        {{#if ../icon}}
                            <i class="icon {{../icon}}"></i>
                        {{/if}}
                    </span>
                    {{../text}}
                </a>
            </li>
        {{/eq}}

    {{/each}}
</ul>
