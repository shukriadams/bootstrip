<form>
    <content>
        <label for="myemail">Email address</label>
        <input type="email" id="myemail" placeholder="name@example.com">
    </content>

    <content>
        <label for="mytext">Example textarea</label>
        <textarea id="mytext" rows="3"></textarea>
    </content>

    <content>
        <label for="mytext">Email address (large)</label>
        <input type="email" class="dashiForm-input--large" id="myemail" placeholder="name@example.com">
    </content>

    <content>
        <label for="myemail">Email address</label>
        <input type="email" id="myemail" placeholder="name@example.com">
        <help>Help text for a form element can be added here</help>
    </content>

    <content>
        <input type="checkbox" id="mycheck">
        <label for="mycheck">Check me out</label>
    </content>

    <content>
        <label for="myfile">File select</label>
        <input type="file" id="myfile">
    </content>

    <content>
        <label for="exampleDataList">Datalist example</label>
        <input list="datalistOptions" id="exampleDataList" placeholder="Type to search...">
        <datalist id="datalistOptions">
            <option value="San Francisco">
            <option value="New York">
            <option value="Seattle">
            <option value="Los Angeles">
            <option value="Chicago">
        </datalist>
    </content>

    <content>
        <select>
            <option selected>Open this select menu</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
        </select>
    </content>

    <content>
        <select multiple>
            <option selected>Open this muliple select menu</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
        </select>
    </content>

    <content>
        <select class="dashiForm-input--large">
            <option selected>Open this large select menu</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
        </select>
    </content>

    <content>
        <radiocontainer>
            <input type="radio" id="flexRadioDefault1" name="flexRadioDefault">
            <label for="flexRadioDefault1">
                Default radio
            </label>
        </radiocontainer>
        <radiocontainer>
            <input type="radio" id="flexRadioDefault2" name="flexRadioDefault" checked>
            <label for="flexRadioDefault2">
                Default checked radio
            </label>
        </radiocontainer>
    </content>

    <content>
        <input type="checkbox" id="flexSwitchCheckChecked" checked>
        <label for="flexSwitchCheckChecked">Checked switch checkbox input</label>
    </content>

    <h2>Disabled</h2>

    <content>
        <label>Email</label>
        <input type="email" class="dashiform-input--disabled" placeholder="name@example.com">
    </content>

    <content>
        <label>Email</label>
        <textarea id="mytext" class="dashiform-input--disabled" rows="3">Some text</textarea>
    </content>

    <content>
        <select disabled>
            <option selected>Open this large select menu</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
        </select>
    </content>

    <content>
        <input type="checkbox" id="mycheck" disabled>
        <label disabled for="mycheck">Check me out</label>
    </content>

    <content>
        <radiocontainer>
            <input type="radio" id="flexRadioDisabled1" name="flexRadioDisabled" disabled>
            <label for="flexRadioDisabled1">
                Default radio
            </label>
        </radiocontainer>
        <radiocontainer>
            <input type="radio" id="flexRadioDisabled2" name="flexRadioDisabled" checked disabled>
            <label for="flexRadioDisabled2">
                Default checked radio
            </label>
        </radiocontainer>
    </content>

</form>