<div class="card {{modifiers}}">

    {{! content placed directly in the card with be flush with its edges }}
    {{#if image}}
        <img src="{{image}}">
    {{/if}}

    {{! note that you can stack content blocks if desired - add as many as desired }}
    {{#each content}}
        <div class="card-pad">

            {{#if title}}
                <h5 class="card-header {{titleModifiers}}">{{title}}</h5>
            {{/if}}

            {{#if text}}
                <p>
                    {{{text}}}
                </p>
            {{/if}}

            {{#if link}}
                <a href="#" class="button">{{link}}</a>
            {{/if}}

        </div>
    {{/each}}

</div>